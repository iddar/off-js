{
	"extends": "./tsconfig.base",
	"compilerOptions": {
		"target": "ES2018",
		"noImplicitAny": true,
		"sourceMap": true,
		"noUnusedParameters": true,
		"noUnusedLocals": true,
		"noImplicitThis": true,
		"diagnostics": true,
		"listFiles": true,
		"pretty": true,
		"moduleResolution": "node",
		"noEmitOnError": false,
		"strictNullChecks": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"strict": true,
		"outDir": "./lib",
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": []
}
